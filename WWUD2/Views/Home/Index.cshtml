@model WWUD2.Models.ViewModels.MainPage

@{
    
    ViewBag.Title = "WWUD";
}

<div class="jumbotron">
    <h1>What would you do if...</h1>
    <p class="lead"><span class="text-success"><b>@Model.RandomQuestion.QuestionContent</b></span> </p>

    @using (Html.BeginForm("Create", "Answers")) {

    <div Class="form-inline">
        @Html.HiddenFor(Model => Model.RandomQuestion.QuestionID)    
        <div Class="form-group">
            @Html.EditorFor(Model => Model.RandomQuestion.Answers.FirstOrDefault().AnswerContent, new { htmlAttributes = new { @class = "form-control", @placeholder="Your Answer" } })
            @Html.ValidationMessageFor(Model =>Model.RandomQuestion.Answers.FirstOrDefault().AnswerContent,  "", new { @class = "text-danger" })
            <input type="submit" value="Submit" class="btn btn-primary"/>
        </div>
    </div>

    }

</div>

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <h2>Recent Questions</h2>
        <ul>
            <li>You won a million dolloars</li>
            <li>Got stuck in the rain while...</li>
            <li>Lost your keys in the drain</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Top Users</h2>
        <ul>
            <li>User1</li>
            <li>User2</li>
            <li>User3</li>
            <li>User4</li>
        </ul>
    </div>
</div>
